node{
     
    stage('Scm Checkout'){
        git credentialsId: 'docker_hub', url: 'https://github.com/Venkat07m/core-java.git'
    }
    stage('Mvn Build') {
            
            dir('/var/lib/jenkins/workspace/Docker_Job/hello-world') {
            def mvnHome = tool name: 'M2_HOME', type: 'maven'
            sh "${mvnHome}/bin/mvn clean package"
            
            def pom = readMavenPom file:'pom.xml'
            print pom.version
            env.version = pom.version
            }
        }
    stage('Build Docker Image'){
        dir('/var/lib/jenkins/workspace/Docker_Job/hello-world') {
        sh 'docker build -t venkat07m/microservices:9.1 .'
        }
    }    
    stage('Push Docker Image'){
        sh 'docker push venkat07m/microservices:9.1'
    }
    stage('RunContainer on Dev Server'){
        def dockerRun = 'docker run -d --name test-t536 -p 4567:4567 venkat07m/microservices:9.1'
        sshagent(['dev-server2']) {
        sh "ssh -o StrictHostKeyChecking=no root@172.31.46.21 ${dockerRun}"
        }
    }
}
